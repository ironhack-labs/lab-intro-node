{
  "extends": "standard",
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "document": false,
    "window": false,
    "console": false,
    "describe": true,
    "it": true,
    "beforeEach": true
  },
  "rules": {
    "indent": [
      2,
      2
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}